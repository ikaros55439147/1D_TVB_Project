        margin: 0 auto;
        padding: 0 15px;
    }

    .footer-links {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 30px;
    }

    .footer-column {
        flex: 1;
        min-width: 200px;
        margin-bottom: 20px;
    }

    .footer-column h3 {
        color: #3498db;
        margin-bottom: 15px;
        font-size: 1.2rem;
    }

    .footer-column ul {
